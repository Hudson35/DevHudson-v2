{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/pages/*": ["pages/*"],
      "@/public/*": ["public/*"],
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "components/OrbitControls.jsx", "./jest-setup.js", "jest.config.js", "components/Hero/Hero.jsx", "components/Hero/Hero.test.jsx"],
  "exclude": ["node_modules"]
}
